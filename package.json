{
	"name": "tagstudio",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "paraglide-js compile --project ./project.inlang --outdir ./src/paraglide && vite build",
		"preview": "vite preview",
		"tauri": "tauri",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"postinstall": "paraglide-js compile --project ./project.inlang --outdir ./src/paraglide"
	},
	"dependencies": {
		"@tauri-apps/api": "2.0.0-rc.3",
		"apexcharts": "^3.52.0",
		"chart.js": "^4.4.4",
		"daisyui": "^4.12.10",
		"svelte-chartjs": "^3.1.5"
	},
	"devDependencies": {
		"@sveltejs/adapter-static": "^3.0.4",
		"@sveltejs/kit": "^2.5.24",
		"@sveltejs/vite-plugin-svelte": "^4.0.0-next.6",
		"@tailwindcss/forms": "^0.5.7",
		"@tailwindcss/typography": "^0.5.14",
		"@tauri-apps/cli": "2.0.0-rc.7",
		"@typescript-eslint/eslint-plugin": "^6.21.0",
		"@typescript-eslint/parser": "^6.21.0",
		"autoprefixer": "^10.4.20",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^8.10.0",
		"eslint-plugin-svelte": "^2.43.0",
		"postcss": "^8.4.41",
		"prettier": "^3.3.3",
		"prettier-plugin-svelte": "^3.2.6",
		"prettier-plugin-tailwindcss": "^0.5.14",
		"svelte": "5.0.0-next.238",
		"svelte-check": "^3.8.6",
		"svelte-switch-case": "^2.0.0",
		"tailwind-scrollbar": "^3.1.0",
		"tailwindcss": "^3.4.10",
		"tslib": "^2.7.0",
		"typescript": "^5.5.4",
		"vite": "^5.4.2",
		"vite-plugin-tailwind-purgecss": "^0.2.1"
	}
}
